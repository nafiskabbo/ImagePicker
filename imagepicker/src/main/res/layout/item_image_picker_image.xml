<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.kabbodev.imagepicker.utils.view.SquareFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/imagepicker_title_image"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/gif_indicator"
            style="@style/imagepicker_TextSmall"
            android:layout_gravity="bottom"
            android:background="@color/image_picker_black_alpha_30"
            android:paddingStart="@dimen/image_picker_padding_large"
            android:paddingTop="@dimen/image_picker_padding_small"
            android:paddingEnd="@dimen/image_picker_padding_large"
            android:paddingBottom="@dimen/image_picker_padding_small"
            android:text="@string/imagepicker_text_gif"
            android:textColor="@color/image_picker_white"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/image_selected_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="2dp"
            android:background="@drawable/image_picker_indicator_bg"
            android:contentDescription="@string/imagepicker_title_image"
            android:scaleType="centerInside"
            android:src="@drawable/ic_image_picker_selected" />

        <TextView
            android:id="@+id/text_selected_number"
            style="@style/imagepicker_TextMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="2dp"
            android:background="@drawable/image_picker_indicator_bg"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/image_picker_white"
            android:textSize="12sp"
            tools:text="99"
            tools:visibility="gone" />

    </com.kabbodev.imagepicker.utils.view.SquareFrameLayout>

</layout>